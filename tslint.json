{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "prefer-const": true,
    "no-console": true,
    "no-shadowed-variable": true,
    "no-any": false,
    "no-misused-new": true,
    "no-switch-case-fall-through": true,
    "no-var-keyword": true,
    "trailing-comma": false,
    "object-literal-sort-keys": false,
    "interface-name": [true, "never-prefix"],
    "semicolon": {
      "options": [
        "always"
      ]
    },
    "quotemark": {
      "options": [
        "single"
      ]
    },
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-pascal-case"
      ]
    }
  },
  "rulesDirectory": []
}
